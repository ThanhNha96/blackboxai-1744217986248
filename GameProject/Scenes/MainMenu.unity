<?xml version="1.0" encoding="utf-8"?>
<Scene>
  <GameObjects>
    <GameObject name="MainMenu" tag="Untagged">
      <Components>
        <Canvas>
          <RenderMode>ScreenSpaceOverlay</RenderMode>
          <Scaler>
            <UIScaleMode>ScaleWithScreenSize</UIScaleMode>
            <ReferenceResolution>
              <Width>1920</Width>
              <Height>1080</Height>
            </ReferenceResolution>
          </Scaler>
        </Canvas>
        <Button name="StartButton">
          <Text>Start Game</Text>
          <OnClick>
            <LoadScene>GameScene</LoadScene>
          </OnClick>
        </Button>
        <Button name="SettingsButton">
          <Text>Settings</Text>
          <OnClick>
            <LoadScene>SettingsScene</LoadScene>
          </OnClick>
        </Button>
        <Button name="CreditsButton">
          <Text>Credits</Text>
          <OnClick>
            <LoadScene>CreditsScene</LoadScene>
          </OnClick>
        </Button>
      </Components>
    </GameObject>
  </GameObjects>
</Scene>
